<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>Login Page</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
  </head>
  <body>
    <div class="login-container">
      <form id="login-form">
        <h2>Login Form</h2>
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required>
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required>
        <input type="submit" name="login" value="login">
      </form>
    </div>
    <script>
      const loginForm = document.querySelector('#login-form');
      const loginButton = loginForm.elements.login;
      const emailInput = loginForm.elements.email;
      const passwordInput = loginForm.elements.password;

      // Enable submit button only when both email and password fields have values
      function validateForm() {
        loginButton.disabled = !(emailInput.value && passwordInput.value);
      }
      emailInput.addEventListener('input', validateForm);
      passwordInput.addEventListener('input', validateForm);

      loginForm.addEventListener('submit', async (event) => {
        event.preventDefault();
        const email = emailInput.value;
        const password = passwordInput.value;
        const response = await fetch('/app/auth', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ email, password })
        });
        
        if (response.ok) {
          const data = await response.json();
          localStorage.setItem('token', data.token);
          window.location.href = '/app/';
        } else {
          const errorData = await response.json();
          const errorMessage = errorData.error || 'Invalid email or password';
          alert(errorMessage);
        }
      });

      
    </script>
  </body>
</html>
